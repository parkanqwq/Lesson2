<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/imageandroid" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="тут будут доп кнопки и тд - еще не придумал"
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|right"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textAct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:text=""
                    android:textColor="#070707"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnC"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnC"
                        android:text="@string/c"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <Button
                        android:id="@+id/btn7"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_7"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <Button
                        android:id="@+id/btn4"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <Button
                        android:id="@+id/btn1"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <Button
                        android:id="@+id/btnPerecent"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/pisent"
                        android:textColor="@color/white"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShare"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/share"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn8"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_8"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn5"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn2"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn0"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMultiply"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/multiply"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn9"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_9"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn6"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn3"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/_3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPoint"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/point"
                        android:textColor="@color/white"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDelente"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/del"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMin"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/min"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPlas"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="metNumbers"
                        android:text="@string/plas"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEqually"
                        style="@android:style/Widget.Material.Button.Colored"
                        app:backgroundTint="@color/hint_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="@string/equally"
                        android:textColor="@color/white"
                        android:textSize="@dimen/buttonCalkulatorAlbom" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/themeBlack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_theme_black" />

    <ImageView
        android:id="@+id/themeWhile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_theme_while" />
</RelativeLayout>